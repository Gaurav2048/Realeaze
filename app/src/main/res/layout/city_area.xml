<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="30dp"
    android:id="@+id/layouto"
    android:layout_marginRight="30dp"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Select your city    "
        android:textColor="#BEBEC0"
        android:textSize="12dp"
        android:gravity="center"
         android:drawableRight="@drawable/ic_bottom_ar"
        android:layout_gravity="center_horizontal|center_vertical"
        android:drawablePadding="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Select your area    "
        android:textColor="#BEBEC0"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal|center_vertical"
         android:drawableRight="@drawable/ic_bottom_ar"
        android:drawablePadding="5dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:id="@+id/layoutTw"
        android:layout_below="@+id/layouto"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can use your location instead"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="#BDBDBF"

         />
        <ImageView
            android:layout_width="34dp"
            android:layout_marginLeft="15dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circul_imageview"
            android:padding="8dp"
            android:src="@drawable/currentlocation_icon" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="Apply Search"
        android:layout_below="@+id/layoutTw"
        android:textColor="#fff"
        android:paddingLeft="37dp"
        android:paddingRight="37dp"
        android:paddingTop="3dp"
        android:layout_marginTop="9dp"
        android:id="@+id/result_activity"
        android:layout_marginBottom="24dp"
        android:paddingBottom="3dp"
        android:background="@drawable/corner_button"
        android:layout_centerHorizontal="true"

        />
</RelativeLayout>