<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#d5d3dc"
    android:layout_height="match_parent"
    tools:context="com.realeaze.realeaze.fragments.ClientrecFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_alignParentTop="true"
android:background="@drawable/toolbar_gradient"
    >

</RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:elevation="4dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="14dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Client Name Surname "
        android:layout_marginTop="10dp"
        android:textSize="26dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="15dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="6dp"
                android:elevation="6dp"
                android:padding="14dp"
                android:background="@drawable/email_circ_ic"
                android:src="@drawable/ic_email_col"
                />
           <TextView
               android:layout_width="wrap_content"
               android:textSize="12dp"
               android:layout_height="wrap_content"
               android:text="client@gmail.com"
               android:layout_gravity="center_vertical"
               android:textColor="@color/colorPrimary"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text=" +91 123 456 6789"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_margin="6dp"

                    android:background="@drawable/email_circ_ic"
                    android:elevation="6dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_call_col" />
         </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Looking for "
                android:id="@+id/okay"
                android:textColor="#000"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 BHK"
                android:id="@+id/ay"
                android:textSize="27dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget around "
                android:id="@+id/oka1y"
                android:textColor="#000"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30 LKH"
                android:id="@+id/a1y"
                android:textSize="27dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                />

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbcbcb"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"

        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/prefered_loc"
    android:textSize="19dp"
    android:textColor="#000"
    android:drawablePadding="6dp"
    android:layout_marginLeft="13dp"
    android:gravity="bottom"
    android:text="Prefered location"

    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Near metro station "
        android:layout_marginTop="12dp"
        android:textSize="14dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/properttp_icon"
        android:textSize="19dp"
        android:textColor="#000"
        android:layout_marginTop="7dp"
        android:drawablePadding="6dp"
        android:layout_marginLeft="13dp"
        android:gravity="bottom"
        android:text="Property type"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Residential  "
        android:layout_marginTop="12dp"
        android:textSize="14dp"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/carpet_icon"
        android:textSize="19dp"
        android:textColor="#000"
        android:layout_marginTop="7dp"
        android:drawablePadding="6dp"
        android:layout_marginLeft="13dp"
        android:gravity="bottom"
        android:text="Carpet area"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
         android:text="900 sqr.Fit"
        android:layout_marginTop="12dp"
        android:textSize="14dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show match"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic|bold"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="15dp"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/email_circ_ic"
           android:elevation="4dp"
            android:padding="11dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_serkh"
            />

    </LinearLayout>
    </LinearLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Project that we found mathc your criteria"
       android:paddingTop="12dp"

       android:layout_marginTop="12dp"
       android:layout_marginBottom="12dp"
       android:paddingBottom="12dp"
       android:gravity="center"
       android:paddingLeft="4dp"
       android:paddingRight="4dp"
       android:background="#cbcbcb"
       android:textSize="17dp"
       />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ertra_recycler"

        />
</LinearLayout>

    </ScrollView>
</RelativeLayout>
