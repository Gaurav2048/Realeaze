<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.realeaze.realeaze.fragments.DetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/toolbar_gradient">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Realeze"
            android:textColor="#fff"
            android:id="@+id/app_n"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:textSize="25dp"
            />

    </RelativeLayout>
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
        android:id="@+id/card"
android:layout_marginTop="50dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Hi Sanjay!"
            android:layout_marginBottom="7dp"
            android:textColor="#9A9E9F"
            android:textSize="21dp"

            />

        <TextView
            android:id="@+id/id_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/name_"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="you have"
            android:textColor="#9A9E9F"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/id_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name_"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="December, 2017"
            android:textColor="#6F8197"
            android:textSize="14dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/id_1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="4 tasks pending"
            android:textColor="#FF7147"
            android:id="@+id/taskpending"
            android:layout_marginBottom="18dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/id_2"
            android:layout_alignStart="@+id/id_2"
            android:text="31-Tues"
            android:id="@+id/day"
            android:textColor="#FF7147"
            android:layout_marginBottom="35dp"
            android:textSize="20dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/card"
    android:layout_centerHorizontal="true"
    >
    <ImageView
         android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/no_task"
        android:layout_gravity="center_horizontal"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="14dp"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:text="No task yet"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="We have fetched all records \n and currently no tasks available yet."
        android:textColor="#6F8094"
        android:layout_marginTop="7dp"

        />
</LinearLayout>
</RelativeLayout>
