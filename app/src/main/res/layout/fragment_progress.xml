<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFC"
     tools:context="com.realeaze.realeaze.fragments.ProgressFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/toolbar_gradient">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="My Progress"
            android:textColor="#fff"
            android:id="@+id/app_n"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:textSize="25dp"
            />

    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="7dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/name_progress"
            android:text="Hi Sanjay!"
            android:textSize="22dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="you have"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/name_progress"
                android:textSize="15dp"
                android:id="@+id/you_have"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 projects on Going"
                android:layout_below="@+id/you_have"
                android:textSize="20dp"
                android:id="@+id/progressing_project"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#fff"
    android:layout_marginTop="240dp"
    >
    <android.support.design.widget.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/viewpager_tabl"
        app:tabGravity="fill"
        app:tabBackground="@color/white_full"
        android:background="@color/white_full"
        app:tabPaddingStart="2dp"
        app:tabPaddingEnd="2dp"
        app:tabMaxWidth="45dp"
        app:tabMinWidth="20dp"
         app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        android:layout_centerInParent="true"
         />
</RelativeLayout>
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewPager"
        android:layout_marginTop="290dp"
         android:layout_width="match_parent"
        android:layout_height="fill_parent"
        />

</FrameLayout>
