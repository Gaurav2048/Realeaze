<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back"

                    android:layout_centerVertical="true"
 android:padding="5dp"

                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Property"
                    android:textSize="20dp"
                    android:id="@+id/ind_search"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#F75D43"

                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_regresh"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F1F5"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:paddingBottom="30dp"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/prime_search_corner">

                    <TextView
                        android:id="@+id/primary_search_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:hint="Enter location, budget or type"
                        android:paddingLeft="23dp"
                        android:textColor="#FBFAFF"

                        android:textColorHint="#cbcbcb"
                        android:textSize="12dp"


                        />

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/circul_imageview"
                        android:padding="6dp"
                        android:src="@drawable/ic_mag" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="you can try out advance search technique"
                    android:textColor="#b6b5b5"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_view"
                    android:src="@drawable/ic_place_low_"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/train_icon"
                    android:gravity="bottom|left"
                    android:paddingLeft="6dp"
                    android:text="Distance from metro"
                    android:textSize="17dp"

                    />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:id="@+id/seekbar_train"
                     android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"

                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_scale"
                    android:scaleType="fitStart"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                    />
                <include layout="@layout/counter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/plane_icon"
                    android:gravity="bottom|left"
                    android:drawablePadding="10dp"
                    android:paddingLeft="6dp"
                    android:text="Distance from AirPort"
                    android:textSize="17dp"

                    />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/seekbar_tplane"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                     android:src="@drawable/ic_scale"
                    android:scaleType="fitStart"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"


                    />
                <include layout="@layout/counter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/bus_icon"
                    android:gravity="bottom|left"
                    android:drawablePadding="10dp"

                    android:paddingLeft="6dp"
                    android:text="Distance from bus Stop"
                    android:textSize="17dp"

                    />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/seekbar_tbuss"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                     android:src="@drawable/ic_scale"
                    android:scaleType="fitStart"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                    />
                <include layout="@layout/counter"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the Aminities"
                android:background="#F0F1F5"
                android:gravity="center"
                android:textColor="#BBBCC0"
                android:textSize="18dp"
                android:padding="5dp"

                />

            <include
                layout="@layout/checkboxes"
                  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your project type and budget here"
                android:background="#F0F1F5"
                android:gravity="center"
                android:textColor="#BBBCC0"
                android:textSize="18dp"
                android:padding="5dp"

                />
            <include layout="@layout/budget_type"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select City and area"
                android:background="#F0F1F5"
                android:gravity="center"
                android:textColor="#BBBCC0"
                android:textSize="18dp"
                android:padding="5dp"

                />

            <include layout="@layout/city_area" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>