<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_margin="7dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_useric"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/client_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image_useric"
            android:id="@+id/text_clinae_"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Allen Chandler"
            android:textColor="#000"
            android:textSize="20dp"

            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="#00ffffff"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="9dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="11dp"
                android:id="@+id/client_number"
                android:background="@drawable/phone_text"
                android:elevation="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:text="+91 123 456 6789        "
                android:textColor="#FF6F45"
                android:textSize="12dp"


                />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:background="@drawable/phone_imagecirc"
                android:elevation="4dp"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:src="@drawable/client_phone"

                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_clinae_"
            android:layout_marginLeft="12dp"
            android:id="@+id/layout_email"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email_i"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/client_mail"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/email_i"
                android:textSize="15dp"
                android:id="@+id/client_email"
                android:text="client@gmail.com"



                />
        </LinearLayout>
   <ImageView
       android:layout_height="1px"
       android:layout_width="match_parent"
       android:background="#cbcbcb"
       android:layout_below="@+id/layout_email"
       android:layout_marginTop="30dp"
       android:id="@+id/bar"
       android:layout_marginBottom="15dp"

       />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/bar"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"

            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looking for 1BHK"
            android:id="@+id/requirement_client"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2.5 Lkh"
    android:layout_alignParentRight="true"
     android:textStyle="bold"
    android:textSize="22dp"
    android:layout_marginRight="4dp"
    android:id="@+id/client_price"
     android:textColor="@color/colorPrimary"



    />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>