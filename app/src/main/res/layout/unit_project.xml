<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="305dp">
    <RelativeLayout
        android:id="@+id/anchor_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/display_project_baner"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/layer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#a3394669"
            android:paddingBottom="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:text="10/25 Available"
            android:textColor="#fff"
            android:textSize="15dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_link"
         android:background="@drawable/image_circ_pad"
        app:layout_anchor="@id/anchor_support"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginRight="16dp"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="185dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highland woods"
        android:textSize="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="15dp"
        android:textColor="#000"


        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="245dp"
        android:background="#dedddd"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
         android:drawableLeft="@drawable/address_icon"
        android:text="Bangure avenue"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:layout_marginBottom="7dp"
        android:drawablePadding="7dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
         android:paddingLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="right"
        android:text="1.5 Lkh"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:drawablePadding="7dp"

        />
</android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>